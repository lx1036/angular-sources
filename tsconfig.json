{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@angular/common": ["app/packages/common"],
      "@angular/core": ["app/packages/core"],
      "@angular/forms": ["app/packages/forms"],
      "@angular/platform-browser": ["app/packages/platform-browser"],
      "@angular/platform-browser-dynamic": ["app/packages/platform-browser-dynamic"]
    }
  }
}
